<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.quiz.ui.ResultWindow"
      spacing="15" alignment="CENTER" style="-fx-padding: 20; -fx-background-color: #f0f8ff;">
          <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
          </padding>

    <Label fx:id="quizTitleLabel" text="Quiz Title" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    <Label fx:id="scoreLabel" text="Score: 0/0" style="-fx-font-size: 16px;"/>
    <Label fx:id="timeTakenLabel" text="Time Taken: 0 seconds" style="-fx-font-size: 16px;"/>

    <Button text="Close" onAction="#closeWindow" prefWidth="100"/>

</VBox>
